{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:4200/view_posts",
        "http://localhost:4200/login",
        "http://localhost:4200/course",
        "http://localhost:4200/view_post",
        "http://localhost:4200/search-projects",
        "http://localhost:4200/administration/autor/new_post",
        "http://localhost:4200/administration/my_publications",
        "http://localhost:4200/administration/admin/viewUsers"
      ],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.6 }],
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["warn", { "minScore": 0.8 }],
        "categories:seo": ["warn", { "minScore": 0.8 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
